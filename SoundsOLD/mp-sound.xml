<?xml version="1.0"?>

<PropertyList>
	<fx>
	<engine>
      <name>Start external</name>
      <mode>once</mode>
      <path>Aircraft/WG13_Lynx/Sounds/lynxstart.wav</path>
      <condition>
        <and>
          <greater-than>
            <property>sim/model/lynx/state</property>
            <value>0</value>
          </greater-than>
          <not>
            <property>sim/crashed</property>
          </not>
          <and>
            <not>
              <equals>
                <property>sim/current-view/view-number</property>
                <value>0</value> 
              </equals>
            </not>
            <not>
              <equals>
                <property>sim/current-view/view-number</property>
                <value>8</value> 
              </equals>
            </not>
            <not>
              <equals>
                <property>sim/current-view/view-number</property>
                <value>9</value> 
              </equals>
            </not>
          </and>
        </and>
      </condition>
      <volume>
	<factor>0.12</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </engine>
	
	 <engine>
      <name>Start internal</name>
      <mode>once</mode>
      <path>Aircraft/WG13_Lynx/Sounds/turbine-start-in.wav</path>
      <condition>
        <and>
          <greater-than>
            <property>sim/model/Lynx/state</property>
            <value>0</value>
          </greater-than>
          <not>
            <property>sim/crashed</property>
          </not>
          <or>
            <equals>
              <property>sim/current-view/view-number</property>
              <value>0</value> 
            </equals>
            <equals>
              <property>sim/current-view/view-number</property>
              <value>8</value> 
            </equals>
            <equals>
              <property>sim/current-view/view-number</property>
              <value>9</value> 
            </equals>
          </or>
        </and>
      </condition>
      <volume>
	<factor>0.12</factor>
      </volume>
      <reference-dist>50</reference-dist>
      <max-dist>200</max-dist>
    </engine> 
	
	<engine>
      <name>Turbine internal</name>
      <mode>looped</mode>
      <path>Aircraft/WG13_Lynx/Sounds/turbine-loop-in.wav</path>
      <condition>
        <and>
          <greater-than>
            <property>sim/model/Lynx/state</property>
            <value>0</value>
          </greater-than>
          <not>
            <property>sim/crashed</property>
          </not>
          <or>
            <equals>
              <property>sim/current-view/view-number</property>
              <value>0</value>
            </equals>
            <equals>
              <property>sim/current-view/view-number</property>
              <value>8</value> 
            </equals>
            <equals>
              <property>sim/current-view/view-number</property>
              <value>9</value> 
            </equals>
          </or>
        </and>
      </condition>
      <volume>
	<factor>0.12</factor>
      </volume>
      <reference-dist>50</reference-dist>
      <max-dist>200</max-dist>
    </engine>
	
	<engine>
      <name>Shutdown external</name>
      <mode>once</mode>
      <path>Aircraft/WG13_Lynx/Sounds/lynxshutdown.wav</path>
      <condition>
        <and>
          <greater-than>
            <property>sim/model/Lynx/state</property>
            <value>0</value>
          </greater-than>
          <not>
            <property>sim/crashed</property>
          </not>
          <and>
            <not>
              <equals>
                <property>sim/current-view/view-number</property>
                <value>0</value>
              </equals>
            </not>
            <not>
              <equals>
                <property>sim/current-view/view-number</property>
                <value>8</value> 
              </equals>
            </not>
            <not>
              <equals>
                <property>sim/current-view/view-number</property>
                <value>9</value> 
              </equals>
            </not>
          </and>
        </and>
      </condition>
      <volume>
	<factor>0.12</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </engine>
	  
		<engine>
			<name>engine</name>
			<mode>looped</mode>
			<path>Aircraft/WG13_Lynx/Sounds/rotors.wav</path>
			<condition>
				<and>
					<greater-than>
						<property>rotors/main/rpm</property>
						<value>.8</value>
					</greater-than>
					<not>
						<property>sim/crashed</property>
					</not>
				</and>
			</condition>
			<volume>
				<factor>.2</factor>
			</volume>
			<pitch>
				<property>rotors/main/rpm</property>
				<factor>0.01</factor>
				<max>4.5</max>
			</pitch>
		</engine>
		
		<engine> 
        <name>engine shut down rpm</name>
        <path>Aircraft/WG13_Lynx/Sounds/lynxshutdown.wav</path>
        <condition> 
          <property>engines/engine/running</property>
          <not> 
            <property>controls/engines/engine/cutoff</property>
          </not>
          <less-than-equals> 
            <property>engines/engine/rpm</property>
            <value>150</value>-
          </less-than-equals>
        </condition>
        <volume> 
          <property>orientation/alpha-deg</property>
          <type>log</type>
          <min>1.0</min>
          <max>1.5</max>
        </volume>
        <volume> 
          <property>/sim/current-view/internal</property>
          <offset>1.0</offset>
          <factor>-0.4</factor>
        </volume>
	<position>
	  <x>-2.48</x>
	</position>
      </engine>

		<overspeed>
			<name>overspeed</name>
			<mode>looped</mode>
			<path>Sounds/overspeed.wav</path>
			<condition>
				<greater-than>
					<property>velocities/airspeed-kt</property>
					<value>146</value>
				</greater-than>
			</condition>
			<volume>
				<factor>.8</factor>
			</volume>
			<pitch>
				<factor>2</factor>
			</pitch>
			<reference-dist>10.0</reference-dist>
			<max-dist>20.0</max-dist>
		</overspeed>

		<contact>
			<name>ground contact</name>
			<mode>transient</mode>
			<path>Sounds/helicopter-skid.wav</path>
			<condition>
				<or>
					<property>gear/gear[0]/wow</property>
					<property>gear/gear[1]/wow</property>
					<property>gear/gear[2]/wow</property>
					<property>gear/gear[3]/wow</property>
				</or>
			</condition>
			<volume>
				<factor>.8</factor>
			</volume>
			<pitch>
				<factor>2</factor>
			</pitch>
			<reference-dist>10.0</reference-dist>
			<max-dist>20.0</max-dist>
		</contact>

		<wind>
			<name>wind</name>
			<mode>looped</mode>
			<path>Sounds/wind.wav</path>
			<condition>
				<and>
					<property>velocities/airspeed-kt</property>
					<not>
						<property>sim/crashed</property>
					</not>
				</and>
			</condition>
			<volume>
				<property>position/altitude-ft</property>
				<factor>-0.000015</factor>
				<offset>1.0</offset>
				<min>0.1</min>
				<max>1.0</max>
			</volume>
			<volume>
				<property>velocities/airspeed-kt</property>
				<factor>0.0015</factor>
				<min>0.03</min>
				<max>0.25</max>
			</volume>
			<pitch>
				<property>velocities/airspeed-kt</property>
				<factor>0.01</factor>
				<offset>1.25</offset>
			</pitch>
			<reference-dist>10.0</reference-dist>
			<max-dist>20.0</max-dist>
		</wind>

		<crash>
			<name>intense ground contact</name>
			<mode>transient</mode>
			<path>Sounds/crash.wav</path>
			<property>sim/crashed</property>
			<volume>
				<factor>1</factor>
			</volume>
			<pitch>
				<factor>1.5</factor>
			</pitch>
		</crash>
	</fx>
</PropertyList>
